<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" android:orientation="horizontal" android:focusable="true">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="5dp"
        android:clickable="true" android:focusable="true" android:layout_gravity="center_vertical|left">
    </ImageView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTime" android:layout_gravity="center" android:singleLine="false"
            android:textSize="10dp" android:textColor="#f3ffed"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textDistr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp" android:textColor="#bbc5c0" android:singleLine="false"
            android:layout_gravity="center"
            android:enabled="false" android:focusable="false" android:textStyle="bold">
        </TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/textMsg"
                  android:layout_gravity="center_horizontal" android:singleLine="false" android:textSize="15dp"
                  android:textColor="#4397ff" android:text="idfuygidyfugiduyfgiuy" android:layout_marginLeft="10dp"/>
    </LinearLayout>

</LinearLayout>